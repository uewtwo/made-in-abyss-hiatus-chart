{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "module": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@hiatus/*": ["./src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
